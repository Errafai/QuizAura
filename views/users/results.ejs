<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Result</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7fafc;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .result-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 90%;
            max-width: 600px;
            padding: 30px;
            text-align: center;
        }

        h1 {
            color: #333;
            font-size: 2em;
            margin-bottom: 10px;
        }

        .result-image {
            width: 150px;
            height: 150px;
            object-fit: contain;
            margin: 20px auto;
        }

        .result-description {
            font-size: 1.2em;
            color: #555;
            margin-bottom: 20px;
        }

        .score-breakdown {
            text-align: left;
            margin: 20px 0;
        }

        .score-breakdown ul {
            padding: 0;
            list-style: none;
        }

        .score-breakdown li {
            font-size: 1em;
            color: #444;
            margin: 5px 0;
        }

        .action-buttons {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }

        .action-buttons button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 1em;
            cursor: pointer;
            transition: background 0.3s;
        }

        .action-buttons .retake {
            background: #6a11cb;
            color: white;
        }

        .action-buttons .retake:hover {
            background: #5211a3;
        }

        .action-buttons .share {
            background: #2575fc;
            color: white;
        }

        .action-buttons .share:hover {
            background: #1a5eb8;
        }
    </style>
</head>
<body>
    <div class="result-container">
        <h1>Congratulations, <%= user.username %>!</h1>
        <img src="<%= result.image %>" alt="<%= result.name %>" class="result-image">
        <h2>Your Result: <%= result.name %></h2>
        <p class="result-description"><%= result.description %></p>

        <div class="score-breakdown">
            <h3>Score Breakdown:</h3>
            <ul>
                <% for (const [key, value] of Object.entries(scores)) { %>
                    <li><strong><%= key %>:</strong> <%= value %> points</li>
                <% } %>
            </ul>
        </div>

        <div class="action-buttons">
            <button class="retake" onclick="retakeQuiz()">Retake Quiz</button>
            <button class="share" onclick="shareResult()">Share Result</button>
        </div>
    </div>

    <script>
        function retakeQuiz() {
            window.location.href = '/quizzes/<%= quizId %>/start';
        }

        function shareResult() {
            const shareText = `I got "<%= result.name %>" on QuizAura! Take the quiz now: ${window.location.origin}/quizzes/<%= quizId %>`;
            navigator.clipboard.writeText(shareText).then(() => {
                alert('Result copied to clipboard! Share it with your friends.');
            }).catch(err => {
                console.error('Could not copy result to clipboard: ', err);
            });
        }
    </script>
</body>
</html>