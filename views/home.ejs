
<style>
:root {
  --primary: #3b82f6;
  --primary-dark: #2563eb;
  --background: #0f172a;
  --card-bg: rgba(30, 41, 59, 0.5);
  --text-primary: #f8fafc;  
  --text-secondary: #94a3b8;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', system-ui, -apple-system, sans-serif;
  background: linear-gradient(135deg, #1a1f35 0%, #0f172a 50%, #0f172a  100%);
  color: var(--text-primary);
  line-height: 1.6;
}

.container {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

/* Hero Section */
.hero {
  padding: 6rem 2rem;
}

.hero-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  max-width: 80rem;
  margin: 0 auto;
}

.hero-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.hero-content h1 {
  font-size: 3.5rem;
  font-weight: 800;
  margin-bottom: 1.5rem;
  line-height: 1.1;
  background: linear-gradient(to right, var(--text-primary), var(--primary));
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.hero-content p {
  font-size: 1.25rem;
  margin-bottom: 2.5rem;
  color: var(--text-secondary);
  max-width: 40ch;
}

.cta-button {
  display: inline-flex;
  align-items: center;
  padding: 1rem 2.5rem;
  background: var(--primary);
  color: white;
  text-decoration: none;
  border-radius: 0.75rem;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
  width: fit-content;
}

.cta-button:hover {
  background: var(--primary-dark);
  transform: translateY(-2px);
  box-shadow: 0 8px 20px -4px rgba(59, 130, 246, 0.5);
}

/* Features Section */
.features {
  background: rgba(30, 41, 59, 0.3);
  padding: 6rem 2rem;
  text-align: center;
  position: relative;
}

.features::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, var(--primary), transparent);
}

.section-title {
  font-size: 2.5rem;
  margin-bottom: 4rem;
  background: linear-gradient(to right, var(--text-primary), var(--primary));
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2.5rem;
  max-width: 80rem;
  margin: 0 auto;
}

.feature-card {
  background: var(--card-bg);
  backdrop-filter: blur(12px);
  border-radius: 1.5rem;
  padding: 2.5rem;
  transition: all 0.3s ease;
  border: 1px solid rgba(148, 163, 184, 0.1);
}

.feature-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.3);
  border-color: var(--primary);
}

.feature-icon {
  font-size: 2.5rem;
  color: var(--primary);
  margin-bottom: 1.5rem;
}

.feature-card h3 {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  color: var(--text-primary);
}

.feature-card p {
  color: var(--text-secondary);
}

/* Games Section */
.games {
  padding: 6rem 2rem;
}

.game-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
}

.game-card {
  text-decoration: none;
  color: inherit;
  transition: transform 0.3s ease;
}

.game-card:hover {
  transform: scale(1.02);
}

.game-image {
  aspect-ratio: 16/9;
  background-size: cover;
  background-position: center;
  border-radius: 1.5rem;
  position: relative;
  overflow: hidden;
  box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.3);
}

.game-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
  display: flex;
  align-items: flex-end;
  padding: 2rem;
}

.game-card:hover .game-overlay {
  opacity: 1;
}

.game-info {
  color: var(--text-primary);
}

.game-info h4 {
  font-size: 1.5rem;
  margin-bottom: 0.5rem;
}

.game-info h5 {
  color: var(--text-secondary);
  font-weight: normal;
}

/* Testimonials Section */
.testimonials {
  background: rgba(30, 41, 59, 0.3);
  padding: 6rem 2rem;
  position: relative;
}

.testimonial-card {
  background: var(--card-bg);
  backdrop-filter: blur(12px);
  border-radius: 1.5rem;
  padding: 2rem;
  margin-bottom: 1.5rem;
  font-style: italic;
  border: 1px solid rgba(148, 163, 184, 0.1);
  transition: all 0.3s ease;
}

.testimonial-card:hover {
  transform: translateX(5px);
  border-color: var(--primary);
}

@media (max-width: 1024px) {
  .hero-grid {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .hero-content {
    align-items: center;
  }

  .features-grid,
  .game-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 768px) {
  .features-grid,
  .game-grid {
    grid-template-columns: 1fr;
  }

  .hero-content h1 {
    font-size: 2.5rem;
  }

  .section-title {
    font-size: 2rem;
  }
}
</style>


