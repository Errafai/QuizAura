<style>
    #features2 {
      background: linear-gradient(135deg, #1a1f35 0%, #0f172a 50%, #1e293b 100%);
      padding: 4rem 2rem;
      min-height: 100vh;
    }
    
    #features2 h1 {
      color: #f8fafc;
      font-size: 2.5rem;
      font-weight: 600;
      margin-bottom: 3rem;
    }
    
    .quiz-card {
      display: block;
      text-decoration: none;
      border-radius: 1rem;
      overflow: hidden;
      transition: transform 0.3s ease;
      background: rgba(30, 41, 59, 0.5);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(148, 163, 184, 0.1);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    }
    
    .quiz-card:hover {
      transform: translateY(-5px);
    }
    
    .quiz-card-image {
      position: relative;
      aspect-ratio: 16/9;
      background-size: cover;
      background-position: center;
    }
    
    .quiz-card-overlay {
      position: absolute;
      inset: 0;
      background: rgba(15, 23, 42, 0.75);
      opacity: 0;
      transition: opacity 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1.5rem;
    }
    
    .quiz-card:hover .quiz-card-overlay {
      opacity: 1;
    }
    
    .quiz-card-info {
      color: #f8fafc;
      text-align: center;
    }
    
    .quiz-card-info h4 {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    
    .quiz-card-info h5 {
      font-size: 1rem;
      color: #94a3b8;
      font-weight: 400;
      margin-bottom: 0;
    }
    
    /* Progress Bar Styling */
    .progress {
      background: rgba(15, 23, 42, 0.6);
      border-radius: 1rem;
      overflow: hidden;
    }
    
    .progress-bar {
      background: linear-gradient(90deg, #3b82f6 0%, #6366f1 100%) !important;
      transition: width 0.5s ease;
    }
    
    .progress-header {
      width: 90%;
      display: flex;
      justify-content: space-between;
      color: #94a3b8;
      font-size: 0.875rem;
    }
    
    .progress-text {
      color: #f8fafc;
      font-weight: 500;
    }
    
    /* Responsive Adjustments */
    @media (max-width: 768px) {
      #features2 {
        padding: 2rem 1rem;
      }
      
      .quiz-card-overlay {
        opacity: 1;
        background: rgba(15, 23, 42, 0.85);
      }
    }
    </style>
    
    <section id="features2">
        <h1 class="text-center">Games</h1>
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
                <% quizes.forEach(quiz => { %>
                    <div class="col">
                        <a href="/quiz/<%= quiz._id %>" class="quiz-card">
                            <div class="quiz-card-image" style="background-image: url(<%= quiz.image %>);">
                                <div class="quiz-card-overlay">
                                    <div class="quiz-card-info">
                                        <h4><%= quiz.title %></h4>
                                        <h5><%= quiz.headline %></h5>
                                        
                                        <% const result = results.find(r => r.quizId.toString() === quiz._id.toString()); %>
                                        
                                        <% if (result) { %>
                                            <div class="d-flex justify-content-center align-items-center flex-column mt-4">
                                                <div class="progress mt-4" style="height: 10px; width: 90%;">
                                                    <div 
                                                        class="progress-bar" 
                                                        role="progressbar" 
                                                        style="width: <%= Math.round(((result.currentQuestionIndex + 1) / quiz.questions.length) * 100) %>%;"
                                                        aria-valuenow="<%= Math.round(((result.currentQuestionIndex + 1) / quiz.questions.length) * 100) %>"
                                                        aria-valuemin="0" 
                                                        aria-valuemax="100">
                                                    </div>
                                                </div>
                                                <div class="progress-header mt-2">
                                                    <span class="progress-text">
                                                        Question <%= result.currentQuestionIndex + 1 %> of <%= quiz.questions.length %>
                                                    </span>
                                                    <span class="progress-text">
                                                        <%= Math.round(((result.currentQuestionIndex + 1) / quiz.questions.length) * 100) %>%
                                                    </span>
                                                </div>
                                            </div>
                                        <% } %>
                                        
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

