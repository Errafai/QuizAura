<div class="bg-light">
  <section class="">
      <div class="container my-5 d-flex justify-content-center align-items-center">
          <div class="info-section">
          <div class="card card-custom p-4">
              <h2><%= quiz.title %></h2>
              <div class="d-flex gap-2 mb-3">
              <span class="badge bg-secondary">CSS</span>
              <span class="badge bg-secondary">PRO</span>
              </div>
              <h2>Description</h2>
              <p>
              <%= quiz.description %>
              </p>
              <div class="footer-buttons d-flex justify-content-between">
              <button class="btn btn-outline-light">Share</button>
              <div class="d-flex gap-3">
                  <a href="/quizzes/<%=quiz._id %>/start" class="btn btn-custom">Start Quiz</a>
              </div>
              </div>
          </div>
          </div>
      </div>
      
      </section>
      
      <section id="features2" class="p-4">
          <h2 class="text-center mb-4" style="color: black;">More Quizzes</h2>
          <div class="container text-center">
           <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
              <% for( let i = 0; i < 3; i++ ) { %>
                                  <div class="col">
                       <a href="/quizzes/<%=quizzes[i]._id%>" class="quiz-card">
                           <div class="quiz-card-image" style="background-image: url(<%=quizzes[i].image%>);">
                               <div class="quiz-card-overlay">
                                   <div class="quiz-card-info">
                                       <h4><%= quizzes[i].title %></h4>
                                       <h5><%= quizzes[i].headline %></h5>
                                   </div>
                               </div>
                           </div>
                       </a>
                   </div>
              <% } %>                
           </div>
       </div>
      </section>
</div>