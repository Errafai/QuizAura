<style>
#features2 {
  background: rgba(30, 41, 59, 0.3);
}

#features2 h1 {
  font-size: 2.5rem;
  background: linear-gradient(to right, #f8fafc, #3b82f6);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.quiz-card {
  display: block;
  text-decoration: none;
  color: inherit;
  transition: transform 0.3s ease;
}

.quiz-card:hover {
  transform: scale(1.02);
}

.quiz-card-image {
  aspect-ratio: 16/9;
  background-size: cover;
  background-position: center;
  border-radius: 1rem;
  position: relative;
  overflow: hidden;
  box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.3);
}

.quiz-card-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
  display: flex;
  align-items: flex-end;
  padding: 2rem;
}

.quiz-card:hover .quiz-card-overlay {
  opacity: 1;
}

.quiz-card-info {
  transform: translateY(20px);
  transition: transform 0.3s ease;
}

.quiz-card:hover .quiz-card-info {
  transform: translateY(0);
}

.quiz-card-info h4 {
  font-size: 1.5rem;
  margin-bottom: 0.5rem;
  color: #f8fafc;
}

.quiz-card-info h5 {
  color: #94a3b8;
  font-weight: normal;
}
</style>


<section id="features2" class="p-4">
    <h1 class="text-center mb-4">Games</h1>
    <div class="container text-center">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            <% quizes.forEach(quiz => { %>
                <div class="col">
                    <a href="/quizzes/<%=quiz._id%>" class="quiz-card">
                        <div class="quiz-card-image" style="background-image: url(<%=quiz.image%>);">
                            <div class="quiz-card-overlay">
                                <div class="quiz-card-info">
                                    <h4><%= quiz.title %></h4>
                                    <h5><%= quiz.headline %></h5>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
    </div>
</section>