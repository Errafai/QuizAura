<style>
    .quiz-details-container {
      background: linear-gradient(135deg, #1a1f35 0%, #0f172a 50%, #1e293b 100%);
      min-height: 100vh;
      color: #f8fafc;
    }
    
    .info-section {
      width: 100%;
      max-width: 800px;
      margin: 0 auto;
    }
    
    .card-custom {
      background: rgba(30, 41, 59, 0.5);
      backdrop-filter: blur(12px);
      border-radius: 1rem;
      border: 1px solid rgba(148, 163, 184, 0.1);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
      color: #f8fafc;
      padding: 2rem !important;
    }
    
    .card-custom h2 {
      color: #f8fafc;
      font-weight: 600;
      margin-bottom: 1.5rem;
    }
    
    .card-custom p {
      color: #94a3b8;
      line-height: 1.6;
      font-size: 1.1rem;
      margin-bottom: 2rem;
    }
    
    .footer-buttons {
      padding-top: 1.5rem;
      border-top: 1px solid rgba(148, 163, 184, 0.1);
    }
    
    .btn-outline-light {
      border: 1px solid rgba(148, 163, 184, 0.2);
      color: #f8fafc;
      transition: all 0.3s ease;
    }
    
    .btn-outline-light:hover {
      background: rgba(248, 250, 252, 0.1);
      border-color: #f8fafc;
      transform: translateY(-1px);
    }
    
    .btn-custom {
      background: #3b82f6;
      color: white;
      border: none;
      transition: all 0.3s ease;
    }
    
    .btn-custom:hover {
      background: #2563eb;
      transform: translateY(-1px);
    }
    
    /* More Quizzes Section */
    #features2 {
      padding: 4rem 2rem;
      background: rgba(15, 23, 42, 0.3);
    }
    
    #features2 h2 {
      color: #f8fafc;
      font-weight: 600;
      margin-bottom: 3rem;
    }
    
    .quiz-card {
      display: block;
      text-decoration: none;
      transition: transform 0.3s ease;
    }
    
    .quiz-card:hover {
      transform: translateY(-5px);
    }
    
    .quiz-card-image {
      aspect-ratio: 16/9;
      background-size: cover;
      background-position: center;
      border-radius: 1rem;
      position: relative;
      overflow: hidden;
      border: 1px solid rgba(148, 163, 184, 0.1);
    }
    
    .quiz-card-overlay {
      position: absolute;
      inset: 0;
      background: rgba(15, 23, 42, 0.7);
      opacity: 0;
      transition: opacity 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1.5rem;
    }
    
    .quiz-card:hover .quiz-card-overlay {
      opacity: 1;
    }
    
    .quiz-card-info {
      text-align: center;
      color: #f8fafc;
    }
    
    .quiz-card-info h4 {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    
    .quiz-card-info h5 {
      font-size: 1rem;
      color: #94a3b8;
      font-weight: normal;
    }
    </style>
    
    <div class="quiz-details-container">
       <section>
           <div class="container my-5 d-flex justify-content-center align-items-center">
               <div class="info-section">
                   <div class="card card-custom">
                       <h2><%= quiz.title %></h2>
                       <h2>Description</h2>
                       <p>
                           <%= quiz.description %>
                       </p>
                       <div class="footer-buttons d-flex justify-content-between">
                           <button class="btn btn-outline-light">Share</button>
                           <div class="d-flex gap-3">
                               <a href="/login" class="btn btn-outline-light">Login</a>
                               <a href="/register" class="btn btn-custom">Register</a>
                           </div>
                       </div>
                   </div>
               </div>
           </div>
       </section>
           
       <section id="features2">
           <h2 class="text-center mb-4">More Quizzes</h2>
           <div class="container text-center">
               <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
                   <% for( let i = 0; i < 3; i++ ) { %>
                       <div class="col">
                           <a href="/quizzes/<%=quizzes[i]._id%>" class="quiz-card">
                               <div class="quiz-card-image" style="background-image: url(<%=quizzes[i].image%>);">
                                   <div class="quiz-card-overlay">
                                       <div class="quiz-card-info">
                                           <h4><%= quizzes[i].title %></h4>
                                           <h5><%= quizzes[i].headline %></h5>
                                       </div>
                                   </div>
                               </div>
                           </a>
                       </div>
                   <% } %>                
               </div>
           </div>
       </section>
    </div>