   
       <style>
        @keyframes fadeIn {
          from { opacity: 0; transform: translateY(10px); }
          to { opacity: 1; transform: translateY(0); }
        }
      
        body {
          margin: 0;
          font-family: system-ui, -apple-system, sans-serif;
          background: linear-gradient(135deg, #1a1f35 0%, #0f172a 50%, #1e293b 100%);
          color: #f8fafc;
        }
      
        /* Hero Section */
        .carousel_page {
          max-width: 80rem;
          margin: 0 auto;
          padding: 4rem 2rem;
          display: grid;
          grid-template-columns: 1fr 1fr;
          gap: 4rem;
          animation: fadeIn 0.5s ease-in-out;
        }
      
        @media (max-width: 768px) {
          .carousel_page {
            grid-template-columns: 1fr;
            padding: 2rem 1rem;
          }
        }
      
        .text_content {
          display: flex;
          flex-direction: column;
          justify-content: center;
        }
      
        .text_content h1 {
          font-size: 3rem;
          font-weight: 700;
          margin-bottom: 1.5rem;
          line-height: 1.2;
        }
      
        .text_content p {
          font-size: 1.25rem;
          margin-bottom: 2rem;
          opacity: 0.9;
        }
      
        .create_button {
          display: inline-flex;
          align-items: center;
          padding: 1rem 2rem;
          background: #3b82f6;
          color: white;
          text-decoration: none;
          border-radius: 0.75rem;
          font-weight: 500;
          transition: all 0.3s ease;
          border: none;
          max-width: fit-content;
        }
      
        .create_button:hover {
          background: #2563eb;
          transform: translateY(-2px);
          box-shadow: 0 4px 12px -1px rgba(59, 130, 246, 0.4);
        }
      
        /* Carousel */
        .carousel {
          background: rgba(30, 41, 59, 0.5);
          backdrop-filter: blur(12px);
          border-radius: 1rem;
          padding: 1rem;
          box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
          border: 1px solid rgba(148, 163, 184, 0.1);
        }
      
        .carousel img {
          border-radius: 0.5rem;
        }
      
        /* Features Section */
        #features {
          background: rgba(30, 41, 59, 0.3);
          padding: 4rem 2rem;
          text-align: center;
        }
      
        #features h2 {
          font-size: 2rem;
          margin-bottom: 3rem;
        }
      
        .row {
          display: grid;
          grid-template-columns: repeat(3, 1fr);
          gap: 2rem;
          max-width: 80rem;
          margin: 0 auto;
        }
      
        @media (max-width: 768px) {
          .row {
            grid-template-columns: 1fr;
          }
        }
      
        .feacher {
          background: rgba(30, 41, 59, 0.5);
          backdrop-filter: blur(12px);
          border-radius: 1rem;
          padding: 2rem;
          transition: transform 0.3s ease;
        }
      
        .feacher:hover {
          transform: translateY(-5px);
        }
      
        .feacher i {
          font-size: 2rem;
          color: #3b82f6;
          margin-bottom: 1rem;
        }
      
        .feacher h3 {
          font-size: 1.5rem;
          margin-bottom: 1rem;
        }
      
        /* Games Section */
        #features2 {
          padding: 4rem 2rem;
        }
      
        .quiz-card {
          display: block;
          text-decoration: none;
          color: inherit;
        }
      
        .quiz-card-image {
          aspect-ratio: 16/9;
          background-size: cover;
          background-position: center;
          border-radius: 1rem;
          position: relative;
          overflow: hidden;
        }
      
        .quiz-card-overlay {
          position: absolute;
          inset: 0;
          background: rgba(0, 0, 0, 0.5);
          opacity: 0;
          transition: opacity 0.3s ease;
          display: flex;
          align-items: center;
          justify-content: center;
        }
      
        .quiz-card:hover .quiz-card-overlay {
          opacity: 1;
        }
      
        /* Comments Section */
        #comments {
          background: rgba(30, 41, 59, 0.3);
          padding: 4rem 2rem;
        }
      
        #comments h2 {
          text-align: center;
          font-size: 2rem;
          margin-bottom: 3rem;
        }
      
        .row2 {
          background: rgba(30, 41, 59, 0.5);
          backdrop-filter: blur(12px);
          border-radius: 1rem;
          padding: 2rem;
          margin-bottom: 1rem;
          font-style: italic;
          line-height: 1.6;
        }
      </style>
